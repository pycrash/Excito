<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                <LinearLayout
                    android:scrollbars="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="#E0F2F1"
                        app:cardCornerRadius="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/colorPrimary"
                                app:cardCornerRadius="10dp"
                                android:padding="3dp"
                                >
                                <TextView
                                    android:layout_margin="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold"
                                    android:text="#Stay Safe"
                                    android:layout_alignParentStart="true"/>
                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Strict measures to ensure your order's safety at every step"
                                android:textSize="10sp"
                                android:paddingTop="2dp"
                                android:textColor="@android:color/black"
                                android:layout_alignParentBottom="true"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="5dp"
                        android:background="@drawable/rectangle"
                        app:cardBackgroundColor="#E3F2FD">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:text="Contact Tracing"
                                android:layout_alignParentStart="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Our riders now have Aarogya Setu app for better safety"
                                android:textSize="10sp"
                                android:paddingTop="2dp"
                                android:textColor="@android:color/black"
                                android:layout_alignParentBottom="true"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="#F9FBE7"
                        app:cardCornerRadius="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:text="Contactless Delivery"
                                android:layout_alignParentStart="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delivery outside your door with zero contact"
                                android:textSize="10sp"
                                android:paddingTop="2dp"
                                android:textColor="@android:color/black"
                                android:layout_alignParentBottom="true"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="#FCE4EC"
                        app:cardCornerRadius="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:text="Rider Safety Checks"
                                android:layout_alignParentStart="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Temp checks, hand wash, masks &amp; more"
                                android:textSize="10sp"
                                android:paddingTop="2dp"
                                android:textColor="@android:color/black"
                                android:layout_alignParentBottom="true"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="#EDE7F6"
                        app:cardCornerRadius="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:text="Safe &amp; Hygienic Stores"
                                android:layout_alignParentStart="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stores that follow WHO safety practices"
                                android:textSize="10sp"
                                android:paddingTop="2dp"
                                android:textColor="@android:color/black"
                                android:layout_alignParentBottom="true"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                </HorizontalScrollView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/groceries_card_view"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="6dp"
                    app:cardBackgroundColor="@color/light_grey"
                    android:elevation="16dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                    <TextView
                        android:id="@+id/groceries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Excito Market"
                        android:textSize="20sp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textStyle="bold|italic"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif-condensed-medium"/>

                    <TextView
                        android:id="@+id/delivered"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="10dp"
                        android:layout_below="@+id/groceries"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Groceries delivered in 60 minutes"
                        android:textColor="@android:color/holo_blue_dark"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Now"
                            android:layout_below="@id/delivered"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@android:color/holo_blue_dark"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="100dp"
                            android:src="@drawable/groceries"
                            android:scaleType="centerCrop"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">


                    <androidx.cardview.widget.CardView
